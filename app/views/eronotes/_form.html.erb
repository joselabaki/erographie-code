<div class="wrapper">
  <div class="logo"><%= inline_svg 'logo.svg' %> </div>
  <div class="form">
        <%= form_with model: @eronote, local: true, validate:true , id: :form do |form| %>
            <% if @eronote.errors.any? %>
             <% @eronote.errors.full_messages.each do |msg| %>
               <label><%= msg %></label>
             <% end %>
             <% end %>

            <div class="browse">
              <%= form.file_field :eromage, required: true , hidden: "hidden", id:"real-file"  %>
              <p id="browse-btn"><%= t :browse %></p>
              <span id="customTxt"><%= t :file %></span>
              </div>
              <div class="body-text">
              <%=form.text_area :body , :cols => 30, :rows => 5 ,  placeholder: "#{I18n.t 'option'}"%>
            </div>


              <div>
              <%= form.submit id: "upload-btn" , hidden: "hidden" %>
              <span id="upTxt"><%= t :upload %></span>

              </div>

        <% end %></div>
  <div class="bottom">
    <div class="link-1"><%= t :about %></div>
    <div class="illustration"> <%= inline_svg "Illu.svg" %></div>
    <div class="link-2"><%= link_to "FR" , locale: :fr %> - <%= link_to "EN" , locale: :en%></div></div>
</div>
